generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Admin{
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  password  String
  name      String
  department String       // not required for the scope of assignment
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}